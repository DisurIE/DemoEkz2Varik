<Window x:Class="DemoEkz2Varik.Auth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoEkz2Varik"
        mc:Ignorable="d"
        Title="Auth" Height="450" Width="800">
    <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
        <TextBlock  Width="400" Height="50" FontSize="40" Margin="0 50 0 0" HorizontalAlignment="Center">Логин</TextBlock>
        <TextBox Width="400" Height="50" FontSize="40" x:Name="login"></TextBox>
        <TextBlock Width="400" Height="50" FontSize="40" HorizontalAlignment="Center">пароль</TextBlock>
        <PasswordBox Width="400" Height="50" FontSize="40" x:Name="password"></PasswordBox>
        
        <StackPanel Orientation="Horizontal">
            <Button x:Name="AuthButton" Click="AuthButton_Click" Margin="0 20 0 0" Width="200" Height="50">Войти</Button>
            <Button Margin="10 20 0 0" x:Name="productsButton" Click="productsButton_Click" Width="200" Height="50">просмотр товаров</Button>
        </StackPanel>
    </StackPanel>
</Window>
